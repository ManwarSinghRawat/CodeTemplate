<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.fico.bigdata.scoring</groupId>
		<artifactId>fico-scoring-parent</artifactId>
		<version>1.0.0</version>
	</parent>
	<artifactId>com.fico.bigdata.scoring.schemas</artifactId>
	<name>com.fico.bigdata.scoring.schemas</name>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<dependencies>
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-annotations</artifactId>
			<version>2.7.0</version>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-databind</artifactId>
			<version>2.7.0</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb2-plugin</artifactId>
				<version>0.12.3</version>
				<executions>
					<execution>
						<id>ScoreSchema</id>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<schemaDirectory>src/main/resources/xsd</schemaDirectory>
							<schemaIncludes>
								<include>scoring-api.xsd</include>
							</schemaIncludes>
							<bindingDirectory>src/main/resources/xsd</bindingDirectory>
							<bindingIncludes>
								<include>bindings.xjb</include>
							</bindingIncludes>
							<generatePackage>com.fico.bigdata.scoring</generatePackage>
							<generateDirectory>${project.build.directory}/generated-sources/scoring-api</generateDirectory>
						</configuration>
					</execution>
					<execution>
						<id>InternalScoreSchema</id>
						<goals>
							<goal>generate</goal>
						</goals>
						<configuration>
							<schemaDirectory>src/main/resources/xsd</schemaDirectory>
							<schemaIncludes>
								<include>fico-score.xsd</include>
							</schemaIncludes>
							<bindingDirectory>src/main/resources/xsd</bindingDirectory>
							<bindingExcludes>
								<include>bindings.xjb</include>
							</bindingExcludes>
							<generatePackage>com.fico.bigdata.scoring.internal</generatePackage>
							<generateDirectory>${project.build.directory}/generated-sources/fico-score</generateDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
